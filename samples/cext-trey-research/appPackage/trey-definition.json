                                                            },
                                                            "latitude": {
                                                                "type": "number"
                                                            },
                                                            "longitude": {
                                                                "type": "number"
                                                            }
                                                        }
                                                    },
                                                    "mapUrl": {
                                                        "type": "string",
                                                        "format": "uri"
                                                    },
                                                    "role": {
                                                        "type": "string"
                                                    },
                                                    "forecastThisMonth": {
                                                        "type": "integer"
                                                    },
                                                    "forecastNextMonth": {
                                                        "type": "integer"
                                                    },
                                                    "deliveredLastMonth": {
                                                        "type": "integer"
                                                    },
                                                    "deliveredThisMonth": {
                                                        "type": "integer"
                                                    }
