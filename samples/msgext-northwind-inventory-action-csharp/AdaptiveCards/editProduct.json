{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Enter Product Details",
      "weight": "bolder",
      "size": "medium"
    },
    {
      "type": "Input.Text",
      "id": "productName",
      "placeholder": "Product Name",
      "value": "${Product.ProductName}"
    },
    {
      "type": "Input.ChoiceSet",
      "label": "Category",
      "id": "categoryID",
      "value":"${Product.CategoryID}",
      "isRequired": true,
      "errorMessage": "Category is required",
      "choices": "${Categories}"
    },
    {
      "type": "Input.ChoiceSet",
      "label": "Supplier",
      "id": "supplierID",
      "value": "${Product.SupplierID}",
      "isRequired": true,
      "errorMessage": "Supplier is required",
      "choices": "${Suppliers}"
    },
    {
      "type": "Input.Number",
      "id": "UnitPrice",
      "label": "Unit Price",
      "min": 0,
      "value": "${Product.UnitPrice}"
    },
    {
      "type": "Input.Text",
      "id": "qtyPerUnit",
      "label": "Quantity per unit",
      "value": "${Product.QuantityPerUnit}"
    },
    {
      "type": "Input.Number",
      "id": "unitsInStock",
      "label": "Units in stock",
      "min": 0,
      "value": "${Product.UnitsInStock}"
    },
    {
      "type": "Input.Number",
      "id": "unitsOnOrder",
      "label": "Units on order",
      "min": 0,
      "value": "${Product.UnitsOnOrder}"
    },
    {
      "type": "Input.Number",
      "id": "reorderLevel",
      "label": "Reorder level",
      "min": 0,
      "value": "${Product.ReorderLevel}"
    },
    {
      "type": "Input.Toggle",
      "valueOn": "true",
      "valueOff": "false",
      "id": "discontinued",
      "title": "Discontinued",
      "value":"${Product.Discontinued}"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Submit",
      "verb": "edit-save",
      "data": {      
        "productId":"${Product.ProductID}"
      }
    }
  ]
}